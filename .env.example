# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_DATABASE=cybersec_project_db

# ================================
# WAF CONFIGURATION
# ================================
# Modo do WAF: 'test' = apenas loga, 'production' = bloqueia
WAF_MODE=test

# ================================
# JWT CONFIGURATION
# ================================
# Opção 1: Usar arquivos de chave (recomendado para desenvolvimento)
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem

# Opção 2: Chaves inline (útil para containers/CI/CD)
# JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

JWT_EXPIRATION_TIME=1h

# ================================
# ADMIN BOOTSTRAP (para script)
# ================================
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=Admin@123456

# ================================
# SECURITY CONFIGURATION
# ================================
# Threshold para auto-blocking de IPs
THREAT_SCORE_THRESHOLD=100

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CORS (Frontend)
# ================================
CORS_ORIGIN=http://localhost:5173
